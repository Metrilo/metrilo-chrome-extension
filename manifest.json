{
  "manifest_version": 2,
  "name": "Metrilo events tracker",
  "description": "Tis extension shows the user what events are being sent to Metrilo",
  "version": "1.0",
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title":"Metrilo Event Log",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["jquery.min.js"]
  }],
  "permissions":  [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
